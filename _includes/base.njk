<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Tate McCauley</title>

    <meta name="description" content="{{ description or 'A personal blog by Tate McCauley' }}">

    <meta property="og:title" content="{{ title }} | Tate McCauley">
    <meta property="og:description" content="{{ description or 'A personal blog by Tate McCauley' }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://tatemccauley.com{{ page.url }}">
    <meta property="twitter:card" content="summary">
    <meta property="twitter:url" content="https://tatemccauley.com{{ page.url }}">
    <meta property="twitter:title" content="{{ title }} | Tate McCauley">
    <meta property="twitter:description" content="{{ description or 'A personal blog by Tate McCauley' }}">
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap');

        :root {
            --width: 720px;
            --font-main: 'Roboto Mono', monospace;
            --font-secondary: 'Roboto Mono', monospace;
            --font-scale: .9em;
            --background-color: #fff;
            --heading-color: #232333;
            --text-color: #232333;
            --link-color: #232333;
            --main-color: #0011ffff;
            --border-color: #232333;
            --muted-color: #555;
        }

        /* Dark theme colors */
        [data-theme="dark"] {
            --background-color: #1a1a1a;
            --heading-color: #e0e0e0;
            --text-color: #d0d0d0;
            --link-color: #e0e0e0;
            --main-color: #5588ff;
            --border-color: #e0e0e0;
            --muted-color: #999;
        }

        /* Auto dark mode based on system preference */
        @media (prefers-color-scheme: dark) {
            :root:not([data-theme="light"]) {
                --background-color: #1a1a1a;
                --heading-color: #e0e0e0;
                --text-color: #d0d0d0;
                --link-color: #e0e0e0;
                --main-color: #5588ff;
                --border-color: #e0e0e0;
                --muted-color: #999;
            }
        }

        body {
            font-family: var(--font-secondary);
            font-size: var(--font-scale);
            margin: auto;
            padding: 20px;
            max-width: var(--width);
            background-color: var(--background-color);
            line-height: 1.6;
            color: var(--text-color);
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        h1,h2,h3,h4,h5,h6 { font-family: var(--font-main); color: var(--heading-color); }
        a { color: var(--link-color); text-decoration: none; border-bottom: 3px solid var(--main-color); padding-bottom: 2px; }
        a:hover { background-color: var(--main-color); color: white; }
        header { margin-bottom: 40px; padding-bottom: 20px; border-bottom: 3px dotted var(--border-color); }
        footer { margin-top: 40px; border-top: 3px dotted var(--border-color); padding: 25px 0; text-align: center;}
        
        /* Theme toggle link */
        .theme-toggle {
            background: none;
            border: none;
            font-family: var(--font-secondary);
            font-size: inherit;
            cursor: pointer;
            padding: 0;
            color: var(--link-color);
            border-bottom: 3px solid var(--main-color);
            padding-bottom: 2px;
        }
        .theme-toggle:hover {
            background-color: var(--main-color);
            color: white;
        }
        main h1:first-child, main h2:first-child { margin-top: 0; }
        /* A little style so the main h1 doesn't have an underline from the header link */
        header a { border-bottom: none; }

        /* ---- NEW AND IMPROVED POST LIST STYLES ---- */
.post-list {
    list-style-type: none; /* Removes the bullet points */
    padding: 0;
    margin: 0;
}
.post-entry {
    margin-bottom: 2.5em; /* Adds space between blog posts */
}
.post-title {
    font-size: 1.5em;
    font-weight: bold;
    border-bottom: none; /* Removes the red underline from this link */
}
.post-title:hover {
    background-color: inherit; /* Disables the red background on hover */
    color: var(--main-color); /* Changes text to red on hover */
}
.post-meta {
    color: var(--muted-color);
    font-size: 0.9em;
    margin: 0.2em 0 0.5em 0; /* Adjusts spacing around the date */
}
.post-excerpt {
    margin-bottom: 0.5em;
}
.read-more {
    font-size: 0.9em;
    font-weight: bold;
}

/* ---- UTILITY CLASSES FOR LINKS ---- */
.no-underline a {
    border-bottom: none; /* Removes the blue underline */
}

.no-underline a:hover {
    background-color: inherit; /* Disables the red background on hover */
    color: var(--main-color); /* Changes text to blue on hover */
}

/* Clean list styling */
.clean-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.clean-list li {
    margin-bottom: 1em;
}

/* Bold links */
.bold-links a {
    font-weight: bold;
}

/* Muted text for dates/meta */
.muted {
    color: var(--muted-color);
    font-size: 0.9em;
}

/* Combined utility class for recent posts */
.recent-posts {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.recent-posts li {
    margin-bottom: 1em;
}

.recent-posts a {
    border-bottom: none;
    font-weight: bold;
}

.recent-posts a:hover {
    background-color: inherit;
    color: var(--main-color);
}

        .recent-posts time {
            color: var(--muted-color);
            font-size: 0.9em;
            margin-left: 0.5em;
        }

        /* Code block styling */
        pre {
            background-color: var(--background-color);
            border: 1px solid var(--border-color);
            border-radius: 4px;
            padding: 1em;
            overflow-x: auto;
            margin: 1.5em 0;
        }

        code {
            font-family: 'Roboto Mono', monospace;
            font-size: 0.9em;
        }

        pre code {
            display: block;
            background: transparent;
            padding: 0;
        }

        /* Inline code */
        :not(pre) > code {
            background-color: rgba(0, 17, 255, 0.1);
            padding: 0.2em 0.4em;
            border-radius: 3px;
            font-size: 0.9em;
        }

        [data-theme="dark"] :not(pre) > code {
            background-color: rgba(85, 136, 255, 0.2);
        }

        /* Mermaid diagram styling */
        .mermaid {
            background-color: var(--background-color);
            border: 1px solid var(--border-color);
            border-radius: 4px;
            padding: 1.5em;
            margin: 1.5em 0;
            text-align: center;
            overflow-x: auto;
        }

        /* Prism.js theme adjustments for dark mode */
        [data-theme="dark"] pre[class*="language-"] {
            background-color: #1e1e1e;
        }
    </style>
    
    <!-- Prism.js CSS for syntax highlighting -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" media="(prefers-color-scheme: dark)">
</head>
<body>
    <header>
        <a href="/"><h1>Tate McCauley</h1></a>
        <nav>
            <a href="/">Home</a>
            <a href="/posts/">Blog</a>
            <a href="/about/">About</a>
            <a href="/resume/">Resume</a>
            <a href="/now/">Now</a>
            <button class="theme-toggle" id="theme-toggle" aria-label="Toggle dark mode">
                <span id="theme-text">Dark</span>
            </button>
        </nav>
    </header>

    <main>
        {{ content | safe }}
    </main>
    
    <footer>
        <span>&copy; {% year %} Tate McCauley</span>
    </footer>

    <script>
        // Theme toggle functionality
        const html = document.documentElement;
        const themeToggle = document.getElementById('theme-toggle');
        const themeText = document.getElementById('theme-text');
        
        // Check for saved theme preference or default to system preference
        const currentTheme = localStorage.getItem('theme');
        
        if (currentTheme) {
            html.setAttribute('data-theme', currentTheme);
            updateText(currentTheme);
        } else {
            // Check system preference
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (prefersDark) {
                updateText('dark');
            }
        }
        
        // Toggle theme
        themeToggle.addEventListener('click', () => {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateText(newTheme);
        });
        
        // Update text based on theme
        function updateText(theme) {
            if (theme === 'dark') {
                themeText.textContent = 'Light';
            } else {
                themeText.textContent = 'Dark';
            }
        }
        
        // Listen for system theme changes
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
            if (!localStorage.getItem('theme')) {
                const newTheme = e.matches ? 'dark' : 'light';
                updateText(newTheme);
            }
        });
    </script>

    <!-- Prism.js for syntax highlighting -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
    
    <!-- Mermaid.js for diagrams -->
    <script type="module">
        import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
        
        function getTheme() {
            return document.documentElement.getAttribute('data-theme') === 'dark' ? 'dark' : 'default';
        }
        
        function getThemeVariables(theme) {
            return {
                primaryColor: theme === 'dark' ? '#5588ff' : '#0011ff',
                primaryTextColor: theme === 'dark' ? '#e0e0e0' : '#232333',
                primaryBorderColor: theme === 'dark' ? '#e0e0e0' : '#232333',
                lineColor: theme === 'dark' ? '#e0e0e0' : '#232333',
                secondaryColor: theme === 'dark' ? '#2a2a2a' : '#f0f0f0',
                tertiaryColor: theme === 'dark' ? '#1a1a1a' : '#fff'
            };
        }
        
        function initializeMermaid() {
            const theme = getTheme();
            mermaid.initialize({ 
                startOnLoad: false,
                theme: theme,
                themeVariables: getThemeVariables(theme)
            });
            
            // Convert code blocks with language-mermaid to div.mermaid
            document.querySelectorAll('code.language-mermaid').forEach(codeEl => {
                const pre = codeEl.parentElement;
                const mermaidDiv = document.createElement('div');
                mermaidDiv.className = 'mermaid';
                mermaidDiv.textContent = codeEl.textContent;
                pre.parentNode.replaceChild(mermaidDiv, pre);
            });
            
            // Render all Mermaid diagrams
            document.querySelectorAll('.mermaid').forEach(async (el) => {
                if (!el.hasAttribute('data-processed')) {
                    el.setAttribute('data-processed', 'true');
                    const id = 'mermaid-' + Math.random().toString(36).substr(2, 9);
                    const definition = el.textContent.trim();
                    try {
                        const { svg } = await mermaid.render(id, definition);
                        el.innerHTML = svg;
                    } catch (error) {
                        console.error('Mermaid rendering error:', error);
                        el.innerHTML = '<p style="color: red;">Error rendering diagram</p>';
                    }
                }
            });
        }
        
        // Initialize on page load
        initializeMermaid();
        
        // Update Mermaid theme when user toggles dark mode
        const observer = new MutationObserver(() => {
            const theme = getTheme();
            mermaid.initialize({ 
                startOnLoad: false,
                theme: theme,
                themeVariables: getThemeVariables(theme)
            });
            
            // Re-render all Mermaid diagrams with new theme
            document.querySelectorAll('.mermaid[data-processed]').forEach(async (el) => {
                el.removeAttribute('data-processed');
                const id = 'mermaid-' + Math.random().toString(36).substr(2, 9);
                const definition = el.textContent.trim();
                try {
                    const { svg } = await mermaid.render(id, definition);
                    el.innerHTML = svg;
                    el.setAttribute('data-processed', 'true');
                } catch (error) {
                    console.error('Mermaid rendering error:', error);
                }
            });
        });
        
        observer.observe(document.documentElement, {
            attributes: true,
            attributeFilter: ['data-theme']
        });
    </script>
</body>
</html>